// Настройки TypeScript для приложения
{
  // Параметры компилятора
  "compilerOptions": {
    // Версия JavaScript для компиляции
    "target": "ES2020",
    "useDefineForClassFields": true,
    // Библиотеки для использования
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    // Система модулей
    "module": "ESNext",
    // Пропускать проверку типов в библиотеках
    "skipLibCheck": true,

    /* Режим сборщика */
    // Разрешение модулей через сборщик
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    // Изолированные модули
    "isolatedModules": true,
    "moduleDetection": "force",
    // Не создавать выходные файлы
    "noEmit": true,
    // JSX для React
    "jsx": "react-jsx",

    /* Проверка кода */
    // Строгий режим
    "strict": true,
    // Предупреждать о неиспользуемых переменных
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // Проверять все ветки switch
    "noFallthroughCasesInSwitch": true
  },
  // Включить папку src
  "include": ["src"]
}
